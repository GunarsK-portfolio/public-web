# API URLs - HTTPS only for local development
VITE_API_URL=https://localhost/api/v1
VITE_MESSAGE_API_URL=https://localhost/message/v1

# SSL/TLS Certificates for Vite dev server (optional)
 VITE_CERT_DIR=../infrastructure/docker/traefik/certs
 VITE_CERT_FILE=localhost.crt
 VITE_KEY_FILE=localhost.key

# Mock Data Mode
# Set to 'true' to use local mock data instead of making real API calls
# This is useful for development when the backend is not available
VITE_USE_MOCK_DATA=false